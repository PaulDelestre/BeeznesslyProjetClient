{% extends 'base.html.twig' %}

{% block title %}Mes Ebooks {% endblock %}

{% block body %}

<ul class="nav justify-content-center">
  <li class="nav-item">
    <a class="nav-link active" href="{{ path('prestataire_profil') }}"><button type="button"
        class="btn btn-profil ml-5"> Profil</a></button>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="{{ path('prestataire_ebook') }}"><button type="button" class="btn btn-profil ml-5">
        Ebook</a></button>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="{{ path('prestataire_messagerie') }}"><button type="button" class="btn btn-profil ml-5">
        Messagerie</a></button>
  </li>
</ul>
<div class="container-fluid wrapperPresta">
  <div class="picturePresta">
    <img id='profil' src="/uploads/profile_picture/{{ user.profilePicture }}" alt="photo de profil">
  </div>
  <table class="table table-borderless">
  <tbody>
    <tr>
      <th><h3 class="text-subnav"><span class="color-letter">I</span>llustration</h3></th>
      <th><h3 class="text-subnav"><span class="color-letter">T</span>itre</h3></th>
      <th><h3 class="text-subnav"><span class="color-letter">E</span>xpertise</h3></th>
      <th><h3 class="text-subnav"><span class="color-letter">E</span>diteur</h3></th>
      <th><h3 class="text-subnav"><span class="color-letter">M</span>odération</h3></th>
    </tr>
    {% for ebook in ebooks %}
    <tr>
      <td><img class="w-50" src="/uploads/illustrationEbook/{{ ebook.illustration }}"
          alt="{{ ebook.illustration }}"></td>
      <td><h2>{{ebook.title}}</h2></td>
      <td><p>{{ebook.expertise}}</p></td>
      <td><p>{{ebook.editorName}}</p></td>
      <td>
        {% if ebook.isValidated == true %}
        <p><i class="fas fa-check-square color-letter"></i> Ebook validé par l'administrateur</p>
        {% else %}
        <p><i class="fas fa-sync-alt color-letter"></i> Ebook en cours de validation</p>
        {% endif %}
      </td>
      <td><a href="{{ path('prestataire_ebook_show', {'id': ebook.id}) }}"> <i class="fal fa-eye color-letter"></i></a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
  <a href="{{ path('prestataire_ebook_new')}}">
    <button type="button" class="btn btn-inscription nav-link mt-5">Ajouter un nouveau ebook</button>
  </a>
</div>
{% endblock %}