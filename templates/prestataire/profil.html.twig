{% extends 'base.html.twig' %}

{% block title %}Mon profil {% endblock %}

{% block body %}
{{ include('prestataire/navExpert.html.twig') }}
<div class="container-fluid wrapperPresta">
  <div class="picturePresta">
    <img id='profil' src="/uploads/profile_picture/{{ user.profilePicture }}" alt="photo de profil">
  </div>
  <div class="mt-3">
    <h2 class="color-text-white"><span class="color-letter">I</span>nformation personnelles</h2>
  </div>
  <div class="card-deck">
    <div class="card alert mb-3 rounded-pill">
      {{ user.firstname }}
    </div>
    <div class="card alert mb-3 rounded-pill" >
      {{ user.lastname }}
    </div>
  </div>
  <div class="card-deck">
    <div class="card alert mb-3 rounded-pill">
      {{ user.email }}
    </div>
    <div class="card alert  mb-3 rounded-pill">
      {{ user.phone }}
    </div>
  </div>
  <div class="card alert rounded-pill">
    {{ user.adress }}
  </div>
  <div class="card-deck">
    <div class="card alert  mb-3 rounded-pill">
      {{ user.zipcode }}
    </div>
    <div class="alert card mb-3 rounded-pill">
      {{ user.town }}
    </div>
  </div>
  <h2 class="color-text-white mt-4"><span class="color-letter">V</span>otre Expertise</h2>
  <div class="card alert rounded-pill">
    {{ user.provider }}
  </div>
  <div class="card-deck">
    {% if user.companyName is not empty %}
    <div class="card mb-3 alert rounded-pill">
      {{ user.companyName }}
    </div>
    {% endif %}
    <div class="card mb-3 alert rounded-pill">
      {{ user.siretNumber }}
    </div>
  </div>
  <a href="{{ path('prestataire_edit', {'id': user.id}) }}">
    <button type="button" class="btn btn-inscription nav-link mt-3">Editer mon profil</button>
  </a>
</div>
{% endblock %}