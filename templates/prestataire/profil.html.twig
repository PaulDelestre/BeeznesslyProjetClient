{% extends 'base.html.twig' %}

{% block title %}Mon profil {% endblock %}

{% block body %}
<img class="align-self-start mr-3" src="/uploads/logo/{{ user.logo }}" alt="{{ user.logo }}">
  <ul class="nav justify-content-center">
    <li class="nav-item">
      <a class="nav-link active" href="{{ path('prestataire_profil', {'id': user.id}) }}"><button type="button" class="btn btn-profil ml-5"> Profil</a></button>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="{{ path('prestataire_ebook', {'id': user.id}) }}"><button type="button" class="btn btn-profil ml-5"> Ebook</a></button>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="{{ path('prestataire_messagerie', {'id': user.id}) }}"><button type="button" class="btn btn-profil ml-5"> Messagerie</a></button>
    </li>
  </ul>
<div class="container-fluid wrapperPresta">
    <div class="picturePresta">
      <img id='profil'src="/uploads/profile_picture/{{ user.profilePicture }}" alt="photo de profil">
    </div>
    <div class="mt-5">
        <h3 class="text-subnav"><span class="color-letter">I</span>nformation personnelles</h3>
    </div>
    <div class="card-deck">
        <div class="card alert alert-light mb-3 rounded-pill" role="alert">
            {{ user.firstname }}
          </div>
          <div class="card alert alert-light mb-3 rounded-pill" role="alert">
            {{ user.lastname }}
          </div>
        </div>
        <div class="card-deck">
          <div class="card alert alert-light mb-3 rounded-pill" role="alert">
            {{ user.email }}
          </div>
          <div class="card mb-3 alert alert-light rounded-pill" role="alert">
            {{ user.phone }}
          </div>
        </div>
          <div class="alert alert-light rounded-pill" role="alert">
            {{ user.adress }}
          </div>
          <div class="card-deck">
          <div class="card mb-3 alert alert-light rounded-pill" role="alert">
            {{ user.zipcode }}
          </div>
          <div class="card mb-3 alert alert-light rounded-pill" role="alert">
            {{ user.town }}
          </div>
        </div>
          <h3 class="text-subnav"><span class="color-letter">V</span>otre Expertise</h3>
          <div class="alert alert-light rounded-pill" role="alert">
            {{ user.provider }}
          </div>
          <div class="card-deck">
          <div class="card mb-3 alert alert-light rounded-pill" role="alert">
            {{ user.companyName }}
          </div>
          <div class="card mb-3 alert alert-light rounded-pill" role="alert">
            {{ user.siretNumber }}
          </div>
        </div>
        <div class="card mb-3 alert alert-light rounded" role="alert">
          {{ user.description }}
        </div>
          <div class="alert alert-light rounded" role="alert">
            <ul>
                {% for expertise in user.expertise %}
                <ul>
                  <li>{{ expertise.name }}</li>
                </ul>
                {% endfor %}
              </ul>
          </div>
          <a href="{{ path('prestataire_edit', {'id': user.id}) }}">
            <button type="button" class="btn btn-inscription nav-link mt-5">Editer mon profil</button>
            </a>
          
</div>
{% endblock %}
