{% extends 'base.html.twig' %}

{% block title %}Mes Ebooks {% endblock %}

{% block body %}
{{ include('expert/navExpert.html.twig') }}
<div class="container-fluid wrapperPresta">
  {{ include ('entrepreneur/picturePresta.html.twig')}}
  <div class="mt-4">
    <h1><span class="color-letter">V</span>os ebooks</h1>
  </div>
  <table class="table table-hover table-borderless table-striped table-light table-responsive{-sm|-md|-lg|-xl} mt-5">
    <tbody>
      <tr>
        <th>
          <h3 class="text-subnav"><span class="color-letter">T</span>itre</h3>
        </th>
        <th>
          <h3 class="text-subnav"><span class="color-letter">E</span>xpertise</h3>
        </th>
        <th>
          <h3 class="text-subnav"><span class="color-letter">M</span>odération</h3>
        </th>
        <th>
          <h3 class="text-subnav"><span class="color-letter">T</span>éléchargement</h3>
        </th>
        <th>
          <h3 class="text-subnav"><span class="color-letter">A</span>ction</h3>
        </th>
      </tr>
      {% for ebook in ebooks %}
      <tr>
        <td>
          <p>{{ebook.title}}</p>
        </td>
        <td>
          <p>{{ebook.expertise}}</p>
        </td>
        <td>
          {% if ebook.isValidated == true %}
          <p><i class="fas fa-check-square color-letter"></i> Ebook validé par l'administrateur</p>
          {% else %}
          <p><i class="fas fa-sync-alt color-letter"></i> Ebook en cours de validation</p>
          {% endif %}
        </td>
        <td><a href="{{ path('expert_ebook_download_show', {'id': ebook.id}) }}"> 
          {{nbDownloadByEbook[ebook.id]}}<br><i class="color-letter"> voir plus</i>
       </td>
        <td>
          <a href="{{ path('expert_ebook_show', {'id': ebook.id}) }}"> 
            <i class="fal fa-eye color-letter"></i>
            <br>
          <a href="{{ path('expert_ebook_edit', {'id': ebook.id}) }}"> 
            <i class="far fa-edit color-letter"></i>
          </a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
  <div class="navigation">
    {{ knp_pagination_render(ebooks) }}
  </div>
  <a href="{{ path('expert_ebook_new')}}">
    <button type="button" class="btn btn-inscription nav-link mt-5"><i class="fas fa-plus"></i> Ajouter un nouveau ebook</button>
  </a>
</div>
{% endblock %}