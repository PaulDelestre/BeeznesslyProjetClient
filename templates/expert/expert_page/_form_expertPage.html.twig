<div class="m-2">
    <h1 class="color-text-white"><span class="color-letter">G</span>estion de votre page expert</h1>
</div>
<div class="color-text-white pt-3">
   
{{ form_start(expertForm) }}
<div>
    {{ form_row(expertForm.description) }}
</div>
<div class="col-6">
    {{ form_row(expertForm.expertise, {
        "attr": {
            'class': 'selectpicker',
            'data-live-search': true,
            'data-count-selected-text': '{0} sélectionnés',
            'data-actions-box': true,
            'title': 'Sélectionner'
        }
    })  }}
</div>
<div class="col-6">
    {{ form_row(expertForm.logoFile) }}
</div>
<div class="col-6">
    {{ form_row(expertForm.bannerFile) }}
</div>
</div>

<div class="color-text-white text-center">
    <button type="submit" class="btn btn-inscription nav-link mt-5">{{ button_label|default('Enregistrer')
    }}</button>
    <a href="{{ path('expert_expertPage')}}">
        <button type="button" class="btn btn-inscription nav-link mt-5 text-center">Retour</button>
    </a>
</div>
{{ form_widget(expertForm._token) }}
{{ form_end(expertForm, {'render_rest': false}) }}

