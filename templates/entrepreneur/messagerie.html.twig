{% extends 'base.html.twig' %}

{% block title %}Mes Messages {% endblock %}

{% block body %}
{{ include('entrepreneur/_navEntrepreneur.html.twig') }}
<div class="container-fluid wrapperPresta text-center">
  {{ include ('entrepreneur/picturePresta.html.twig')}}
  <table class="table table-hover table-borderless table-responsive{-sm|-md|-lg|-xl}">
    <tbody>
      <tr>
        <th>
          <h3 class="text-subnav"><span class="color-letter">D</span>estinataire</h3>
        </th>
        <th>
          <h3 class="text-subnav"><span class="color-letter">S</span>ujet</h3>
        </th>
        <th>
          <h3 class="text-subnav"><span class="color-letter">D</span>ate</h3>
        </th>
        <th>
          <h3 class="text-subnav"><span class="color-letter">A</span>ction</h3>
        </th>
      </tr>
      {% for contact in contacts|reverse %}
   
      <tr>
        <td>
          {% if contact.user.lastname is empty %}
          {% else %}
          {{contact.user.lastname}}
          {% endif %}
          {% if contact.user.firstname is empty %}
          {% else %}
          {{contact.user.firstname}}
          {% endif %}
          {% if contact.user.companyName is empty %}
          {% else %}
          {{contact.user.companyName}}
          {% endif %}
        </td>
        <td>{{contact.subject}} </td>
        <td>{{contact.createdAt|date('d D M Y')}} </td>
        <td><a href="{{ path('entrepreneur_messagerie_show', {'id': contact.id}) }}"> <i
              class="fal fa-eye color-letter"></i></a></td>
      </tr>
      
      {% endfor %}
    </tbody>
  </table>
  <div class="navigation">
    {{ knp_pagination_render(contacts) }}
</div>
</div>
{% endblock %}