<div class="mt-2">
    <h3 class="text-subnav"><span class="color-letter">E</span>diter vos informations</h3>
</div>
<div class="text-center">
    {{ form_start(form) }}
    <div class="row mt-5">
        <div class="col">
            {{ form_row(form.firstname) }}
        </div>
        <div class="col">
            {{ form_row(form.lastname) }}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            {{ form_row(form.email) }}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            {{ form_row(form.adress) }}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            {{ form_row(form.town) }}
        </div>
        <div class="col">
            {{ form_row(form.zipcode) }}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            {{ form_row(form.profilePictureFile) }}
        </div>
    </div>
    <button type="submit" class="btn btn-inscription text-center mb-3">{{ button_label|default('Enregistrer')
        }}</button>
</div>
<a href="{{ path('entrepreneur_profil')}}">
    <button type="button" class="btn btn-inscription text-center">Retour</button>
</a>
{{ form_widget(form._token) }}
{{ form_end(form, {'render_rest': false}) }}