{% block body %}

  <ul class="nav justify-content-center">
    <li class="nav-item">
      <a class="nav-link active" href="{{ path('entrepreneur_index', {'id': user.id}) }}"><button type="button" class="btn btn-profil ml-5"> Profil</a></button>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="{{ path('entrepreneur_ebook', {'id': user.id}) }}"><button type="button" class="btn btn-profil ml-5"> Ebook</a></button>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="{{ path('entrepreneur_messagerie', {'id': user.id}) }}"><button type="button" class="btn btn-profil ml-5"> Messagerie</a></button>
