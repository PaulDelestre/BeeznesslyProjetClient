<div class="wrapperExpert">
    <div>
        <h3>{{ebook.title}}</h3>
        <h5 class="color-editor">Editeur {{ebook.editorName}}</h5>
        <p class="text-right text-muted">Date de publication: {{ebook.releaseDate|date("d M Y")}}<br>
            {% if ebook.author is not null %}
            De {{ebook.author}}
            {% endif %}
        </p>
        <table class="table table-borderless table-responsive{-sm|-md|-lg|-xl}">
            <tbody>
                <tr>
                    <th scope="row">
                        <img src="https://i.postimg.cc/nh9LpHW8/livre-blanc-l-1-1.png" class="card-img-top"
                            style="width: 8rem;" alt="...">
                            <a href="#">
                                <button type="button" class="btn btn-inscription">Télécharger</button>
                            </a>
                            <button type="button" class="btn btn-connexion mb-4 d-lg-none d-md-none d-sm-none" data-toggle="modal"
                                data-target="#exampleModalCenter">
                                En savoir plus
                            </button>
                    </th>
                    <td class="pl-3 d-none d-sm-block"><p class="d-none d-sm-block">{{ebook.description}}</p><br>
                        <!-- <button type="button" class="btn btn-connexion mb-4 d-lg-none d-md-none d-sm-none" data-toggle="modal"
                            data-target="#exampleModalCenter">
                            En savoir plus
                        </button>
                        <a href="#">
                            <button type="button" class="btn btn-inscription">Télécharger</button>
                        </a> -->
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">{{ebook.title}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5 class="color-expertise">{{ebook.expertise}}</h5>
                <p>{{ebook.description}}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-connexion" data-dismiss="modal">Close</button>
                <a href="#">
                    <button type="button" class="btn btn-inscription">Télécharger</button>
                </a>
            </div>
        </div>
    </div>
</div>