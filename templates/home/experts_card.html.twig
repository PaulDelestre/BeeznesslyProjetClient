<div class="col-lg-3 col-md-5 col-sm-12 my-3">
    <div class="card">
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
            <h2 class="card-title">{{expert.provider}}</h2>
            <h2 class="card-title">
                {{expert.companyName}}
                <div class="card-title">
                    <h5>{{expert.town}}</h5>
                </div>
            </h2>
            {% for expertise in expert.expertise %}
            <p class="text text-muted">
                {{expertise.name}}
            </p>
            {% endfor %}
        </div>
    </div>
</div>