{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="container-fluid subnav-bg">
    <div class="row justify-content-around align-items-center">
        <div class="text-center col-10">
            <h1 class="text-subnav m-3">Les services d'experts proches de chez vous</h1>
        </div>
    </div>
</div>
<div class="container-fluid m-5 pl-5">
    <div class="row">
        <div class="col-lg-3 col-md-3 card-filter pt-3">
            {{form_start(searchForm, {attr: {class:'filter'}})}}
            <h2><span class="color-letter">F</span>iltres</h2>
            {{form_row(searchForm.q)}}
            <hr>
            <div class="accordion" id="accordionExample">
                <div>
                    <div id="headingOne">
                        <button class="btn text-left" type="button" data-toggle="collapse" data-target="#collapseOne"
                            aria-expanded="false" aria-controls="collapseOne">
                            <h4><span class="color-letter">C</span>ategories</h4>
                        </button>
                    </div>
                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne"
                        data-parent="#accordionExample">
                        <div class="card-body">
                            {{ form_row(searchForm.provider)}}
                        </div>
                    </div>
                </div>
                <div>
                    <div id="headingTwo">
                        <hr>
                        <button class="btn text-left collapsed" type="button" data-toggle="collapse"
                            data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            <h4><span class="color-letter">E</span>xpertises</h4>
                        </button>
                    </div>
                    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                        <div class="card-body">
                            {{ form_row(searchForm.expertise)}}
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <div id="headingThree">
                    <hr>
                    <button class="btn text-left collapsed" type="button" data-toggle="collapse"
                        data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                        <h4><span class="color-letter">P</span>restations</h4>
                    </button>
                </div>
                <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                    <div class="card-body">
                        Filtres Ã  finir
                    </div>
                </div>
            </div>
            <hr>
            <div class="text-center pb-3 pt-3">
                <button type="submit" class="btn btn-inscription"> Rechercher</button>
            </div>
            {{form_end(searchForm)}}
        </div>
        <div class="col-lg-9 col-md-9">
            <div class="container-fluid">
                <div class="row">
                    {% for expert in experts %}
                    {% if expert.isValidated == true %} 
                    {% include 'home/experts_card.html.twig' with {expert: expert} only %}
                    {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}