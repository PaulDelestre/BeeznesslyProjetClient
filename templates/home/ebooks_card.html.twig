<div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 my-4 d-flex">
    <div class="card border-light">
        <div class="text-center">
            <a href="{{path ('home_ebook_show', {'slug': ebook.slug})}}" class="link-for-show-img">
                <img src="/uploads/illustrationEbook/{{ ebook.illustration }}" style="width: 13rem;"
                    alt="{{ ebook.illustration }}">
        </div>
        <div class="text-center">
            <button class="btn border-pres pl-3 pr-3">
                <h4>
                    {{ebook.expertise}}
                </h4>
            </button>
        </div>
        </a>
        <div class="card-body mx-auto">
            <div class="card-text">
                <a href="{{path ('home_ebook_show', {'slug': ebook.slug})}}" class="link-for-show">
                    <h2>
                        {{ebook.title}}
                    </h2>
                </a>
                <h5 class="color-editor">Editeur {{ebook.editorName}}</h5>
                <p class="pt-1">
                    <i class="far fa-calendar-alt"></i> {{ebook.releaseDate|date('d M Y')}}
                </p>
                <div class="text-center">
                    <a class="btn btn-inscription" href="{{path ('home_ebook_show', {'slug': ebook.slug})}}"
                        role="button">Voir +</a>
                </div>
            </div>
        </div>
    </div>
</div>