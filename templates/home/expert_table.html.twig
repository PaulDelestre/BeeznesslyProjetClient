<div class="wrapperExpert">
    <div>
        <h3>{{ebook.title}}</h3>
        <h5 class="color-editor">Editeur {{ebook.editorName}}</h5>
        <p class="text-right text-muted">Date de publication: {{ebook.releaseDate|date("d M Y")}}<br>
        {% if ebook.author is not null %}
        De {{ebook.author}}
        {% endif %}
        </p>
        <table class="table table-borderless">
            <tbody>
                <tr>
                    <th scope="row">
                        <img src="https://i.postimg.cc/nh9LpHW8/livre-blanc-l-1-1.png" class="card-img-top"
                            style="width: 8rem;" alt="...">
                    </th>
                    <td>{{ebook.description}}<br>
                        <a href="#">
                            <button type="button" class="btn btn-inscription mt-2">Télécharger</button>
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>