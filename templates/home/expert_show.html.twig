{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

<div class="container-fluid subnav-bg">
    <div class="row justify-content-around align-items-center">
        <div class="text-center col-10 p-4">
        </div>
    </div>
</div>
<div class="container mt-2">
    <div class="row">
        <div class="col-md-2 pt-3">
            <div class="filter">
                <img id='logo' src="/uploads/logo/{{ user.logo }}" alt="logo de l'entreprise">
                <h4 class="mt-5"><span class="color-letter"> A </span><a href="#A PROPOS DE NOUS"
                        style="color:#000000;">propos de
                        nous</a></h4>
                <hr class="hr-expert">
                {% if user.ebooks is not null %}
                <h4><span class="color-letter"> N</span><a href="#E-BOOKS" style="color:#000000;">os E-Books</a></h4>
                <hr class="hr-expert">
                {% endif %}
                {% if user.services is not null %}
                <h4><span class="color-letter"> N</span><a href="#NOS SERVICES" style="color:#000000;">os services</a>
                </h4>
                <hr class="hr-expert">
                {% endif %}
                <h4 class="pb-5"><span class="color-letter"> C</span><a href="#CONTACTEZ NOUS"
                        style="color:#000000;">ontactez cet
                        expert</a></h4>
                {% include 'design_form_yellow.html.twig'%}
            </div>
        </div>
        <div class="col-md-9 mx-auto">
            <div class="container-fluid">
                <div class="row">
                    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img id="banner_picture" class="img-fluid" src="/uploads/banner/{{ user.banner }}"
                                    alt="Banner picture">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="pt-4 pb-3">
                    {% if user.companyName is not null %}
                    <h1 class="name-expert-show"> {{user.companyName}}</h1>
                    {% else %}
                    <h1 class="name-expert-show"> {{user.firstname }} {{user.lastname}}</h1>
                    {% endif %}
                    <div class="row pb-3 pl-3">
                        <p class="pr-4"><i class="fas fa-map-marker-alt color-icon-blue"></i> {{user.town}}</p>
                        {% for expertise in user.expertise %}
                        <p class="pr-4 "><i class="fas fa-check color-icon-blue"></i> {{expertise.name}}</p>
                        {% endfor %}
                    </div>
                </div>
                <section id="A PROPOS DE NOUS">
                    <div>
                        <h1>A PROPOS DE NOUS</h1>
                        <hr class="hr-expert"><br>
                    </div>
                    <div class="pt-5 mt-4">
                        <div class="container-fluid wrapperExpertDescri">
                            <div class="pictureExpert">
                                <img id='profil' src="/uploads/profile_picture/{{ user.profilePicture }}"
                                    alt="photo de profil">
                            </div>
                            <div class="card-deck">
                                <p> {{user.description}} </p>
                            </div>
                        </div>
                    </div>
                </section>
                {% if user.ebooks is not empty %}
                <section class="mt-5" id="E-BOOKS">
                    <div>
                        <h1>E-BOOKS</h1>
                        <hr class="hr-expert">
                    </div>
                    {% for ebook in user.ebooks %}
                    {% include 'home/expert_ebook_table.html.twig'%}
                    {% endfor %}
                </section>
                {% endif %}
                {% if user.services is not empty %}
                <section class="mt-5 mb-5" id="NOS SERVICES">
                    <div>
                        <h1>NOS SERVICES</h1>
                        <hr class="hr-expert">
                    </div>
                    {% for service in user.services %}
                    {% include 'home/expert_service_table.html.twig'%}
                    {% endfor %}
                </section>
                {% endif %}
                <section id="CONTACTEZ NOUS" class="m-5 p-5">
                    <div class="container">
                        <div class="row-fluid">
                            <div class="well well-sm">
                                <div class="form-horizontal">
                                    <fieldset>
                                        <legend class="text-center">
                                            <h1>CONTACTEZ NOUS</h1>
                                        </legend>
                                        {{ form_start(contactForm) }}
                                            <div class="row">
                                                <div class="col-md-6">
                                                    {{ form_row(contactForm.firstname) }}
                                                </div>
                                                <div class="col-md-6">
                                                    {{ form_row(contactForm.lastname) }}
                                                </div>
                                            </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                {{ form_row(contactForm.email) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                {{ form_row(contactForm.subject) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 col-sm-12 col-xs-12 ">
                                                {{ form_row(contactForm.message) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-12 text-center">
                                                <button class="btn btn-inscription" type="submit" id="submit-contact">{{
                                                    button_label|default('Envoyer') }}</button>
                                            </div>
                                        </div>
                                        {{ form_end(contactForm) }}
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
<hr>
{% endblock %}