{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="jumbotron m-5 color-inscription form-bg-login">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="color-connexion">Inscription</h1>
    <ul class="nav nav-tabs my-4">
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_register_expert')}}">Expert</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="{{ path('app_register_entrepreneur')}}">Entrepreneur</a>
        </li>
    </ul>

    {{ form_start(registrationForm) }}
  
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.lastname) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <div class="text-center">
        <button type="submit" class="btn btn-inscription">S'inscrire</button>
        </div>
    {{ form_end(registrationForm) }}

</div>


{% endblock %}
