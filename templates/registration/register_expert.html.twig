{% extends 'base.html.twig' %}

{% block title %}Inscription Expert Digital{% endblock %}

{% block body %}

<div class="container-fluid color-text-white">
    <div class="row align-items-center">
        <div class="col-xl-8 col-lg-8 col-md-12 col-xs-12">
            <div class="jumbotron m-5 color-inscription form-bg-login">
                {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}
                <h1 class="color-connexion">Inscription</h1>
                <ul class="nav nav-tabs my-4">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_register_expert')}}">Expert</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register_entrepreneur')}}">Entrepreneur</a>
                    </li>
                </ul>
                {{ form_start(registrationForm) }}
                <h4 class="color-connexion mt-4"><span class="color-letter">1.</span> Informations personnelles</h4>
                <div class="row">
                    <div class="col-6">
                        {{ form_row(registrationForm.firstname) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(registrationForm.lastname) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(registrationForm.phone) }}
                    </div>
                </div>
                {{ form_row(registrationForm.adress) }}
                <div class="row">
                    <div class="col-6">
                        {{ form_row(registrationForm.zipcode) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(registrationForm.town) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4 d-none d-md-block">
            <img src="https://i.postimg.cc/L5ydgXTB/undraw-Hire-re-gn5j-2.png" class="img-fluid">
        </div>
    </div>
    <div class="jumbotron ml-5 mr-5  color-inscription form-bg-login">
        <div class="row align-items-center justify-content-around">
            <div class="col-xl-8 col-lg-8 col-md-12 col-xs-12">
                <h4 class="color-connexion"><span class="color-letter">2.</span> A propos de votre expertise
                </h4>
                <div class="row">
                    <div class="col-6">
                        {{ form_row(registrationForm.provider) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(registrationForm.siretNumber) }}
                    </div>
                </div>
                
                <p>Domaine(s) d'expertise(s) </p>
                    {{ form_row(registrationForm.expertise, {
                        "attr": {
                            'class': 'selectpicker',
						    'data-live-search': true,
						    'data-count-selected-text': '{0} sélectionnés',
						    'data-actions-box': true,
						    'title': 'Sélectionner'
                        }
                    }) }}
            
            </div>
            <div class="col-4 d-none d-md-block text-center">
                <svg width="119" height="236" viewBox="0 0 119 236" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5.68911 139.112L35 124.123L64.3109 139.112V168.888L35 183.877L5.68911 168.888V139.112Z"
                        stroke="#F9B419" stroke-width="2" />
                    <path d="M32.6891 15.8663L62 1.11943L91.3109 15.8663V45.1337L62 59.8806L32.6891 45.1337V15.8663Z"
                        stroke="#F9B419" stroke-width="2" />
                    <path
                        d="M74.2824 63.8517L94.5 53.1319L114.718 63.8517V85.1483L94.5 95.8681L74.2824 85.1483V63.8517Z"
                        stroke="#F9B419" stroke-width="2" />
                    <path
                        d="M49.2824 103.608L69.5 93.1264L89.7176 103.608V124.392L69.5 134.874L49.2824 124.392V103.608Z"
                        stroke="#F9B419" stroke-width="2" />
                    <path
                        d="M10.8183 68.8701L34.5 57.1164L58.1817 68.8701V92.1299L34.5 103.884L10.8183 92.1299V68.8701Z"
                        stroke="#F9B419" stroke-width="2" />
                    <path d="M45.4881 190.854L73.5 176.13L101.512 190.854V220.146L73.5 234.87L45.4881 220.146V190.854Z"
                        stroke="#F9B419" stroke-width="2" />
                </svg>
            </div>
        </div>
    </div>
    <div class="jumbotron m-5 color-inscription form-bg-login">
            <h4 class="color-connexion mt-2"><span class="color-letter">3.</span> Dernière étape !</h4>
        <div class="row">
            <div class="col-xl-8 col-lg-8 col-md-12 col-xs-12">
                {{ form_row(registrationForm.plainPassword) }}
                {{ form_row(registrationForm.agreeTerms) }}
            </div>
        </div>
            <div class="text-center">
                <button type="submit" class="btn btn-inscription">S'inscrire</button>
            </div>
            {{ form_widget(registrationForm._token) }}
            {{ form_end(registrationForm, {'render_rest': false}) }}
        </div>
    </div>
</div>
{% endblock %}